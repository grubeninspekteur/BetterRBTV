{
  "manifest_version": 2,
  "name": "BetterRBTV",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "version": "0.2.3",
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [{
    "matches": [
      "*://*.youtube.com/*"
    ],
    "exclude_matches": [
      "*://*.youtube.com/subscribe_embed*",
      "*://*.youtube.com/embed*",
      "*://*.youtube.com/yt/*"
    ],
    "js": [
      "lib/jquery-3.1.0.slim.min.js",
      "lib/dateformat.js",
      "lib/trie.js",
      "lib/push.min.js",
      "emoji_to_keyword.js",
      "keyword_to_emoji.js",
      "util.js",
      "SuggestionBox.js",
      "YouTubeLive.js",
      "default_settings.js",
      "timestamp.js",
      "colored_names.js",
      "recent_emotes.js",
      "better_mention_highlight.js",
      "pinnable_mentions.js",
      "push_notifications.js",
      "sound_notifications.js",
      "chat_filter.js",
      "user_filters.js",
      "keyword_replacement.js",
      "user_suggestions.js",
      "keyword_suggestions.js",
      "entry.js"
    ],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "web_accessible_resources": [
    "sounds/*",
	"img/*"
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}