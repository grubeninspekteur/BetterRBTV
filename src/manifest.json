{
  "manifest_version": 2,
  "name": "BetterRBTV",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "version": "17.10",
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [{
    "matches": [
      "*://*.youtube.com/*"
    ],
    "exclude_matches": [
      "*://*.youtube.com/subscribe_embed*",
      "*://*.youtube.com/embed*",
      "*://*.youtube.com/yt/*"
    ],
    "js": [
      "lib/jquery-3.1.0.slim.min.js",
      "lib/push.min.js",
      "constants.js",
      "util.js",
      "YouTubeLive.js",
      "default_settings.js",
      "colored_names.js",
      "better_mention_highlight.js",
      "better_separate_messages.js",
      "pinnable_mentions.js",
      "push_notifications.js",
      "sound_notifications.js",
      "chat_filter.js",
      "user_filters.js",
      "keyword_replacement.js",
      "entry.js"
    ],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "web_accessible_resources": [
    "sounds/*",
	  "img/*",
    "css/*"
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}